{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./dist",
      "baseUrl": "./src",
      "paths": {
      "*": ["*"]
      },
      "rootDir": "./src",
      "strict": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"]
  }
  